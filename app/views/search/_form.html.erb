<%= form_with(url: search_path, method: :post, class: 'd-flex') do |form| %>
    <% @results = Community.all.name + User.all.name%>
    <%= form.search_field :name_search, placeholder: "Cerca qui!", class: "form-control me-2",oninput:"this.form.requestSubmit()" %>
    <input type="text" id="search_results">
    <%= form.submit "Cerca", class: "btn btn-outline-success" %>
<% end %>

