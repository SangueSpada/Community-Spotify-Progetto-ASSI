<%= render "partials/navbar" %>
<div class="row justify-content-center">
    <div style="padding: 70px"></div> 
        <div class="col-sm-8 col-md-6 justify-content-center">
        <h1>Chats</h1>
            <ul class="list-group chat-group">
            <% atleast_one  = false%>
            <% @chats.each do |chat| %>
                <% if chat.user1==current_user %>
                    <% atleast_one  = true%>
                    <li class="list-group-item chat-item"> 

                        <div class="chat-header-cover"></div>
                        <div class="chat-header-content">
                            <span class="userimage"><img src="<%=chat.user2.avatar_url%>" alt=""width="50" height="50" class="rounded-circle"></span>
                            <span class="username"><%= link_to "Chat con "+chat.user2.name, chat %></span>
                            <span class=" chat-button"><%= button_to 'X', chat_path(chat),class: 'btn btn-outline-dark', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, method: :delete %></span>
                        </div>

                    </li>
                <% elsif chat.user2==current_user%>
                    <% atleast_one  = true%>
                    <li class="list-group-item chat-item">

                        <div class="chat-header-cover"></div>
                        <div class="chat-header-content">
                            <span class="userimage"><img src="<%=chat.user1.avatar_url%>" alt="" width="50" height="50"class="rounded-circle"></span>
                            <span class="username"><%= link_to "Chat con "+chat.user1.name, chat %></span>
                            <span class=" chat-button"><%= button_to 'X', chat_path(chat),class: 'btn btn-outline-dark', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, method: :delete %></span>
                        </div>

                    </li>
                <% end %>
            <% end %>
            
            </ul>
            <% unless atleast_one %>
                <p>Sembra che tu non abbia nessuna chat aperta con gli utenti di CommunitySpotify. Recati sul profilo di un'utente per iniziare una chat.</p>
            <% end %>
        </div>
    </div>
</div>

    



