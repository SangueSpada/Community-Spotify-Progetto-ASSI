<% if chat.user1==current_user %>
<% atleast_one  = true%>
<li class="list-group-item chat-item"> 

    <div class="chat-header-cover"></div>
    <div class="chat-header-content">
        <%if chat.user2.avatar_url%>
            <span class="userimage"><img src="<%=chat.user2.avatar_url%>" alt="" width="50" height="50" class="rounded-circle"></span>
        <%else%>
            <span class="userimage"><%= image_tag "prof_pic_default.png" , class: "rounded-circle"%></span>
        <%end%>
        
        <span class="username"><%= link_to "Chat con "+chat.user2.name, chat %></span>
        <span class=" chat-button"><%= button_to 'X', chat_path(chat),class: 'btn btn-outline-dark', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, method: :delete %></span>
    </div>

</li>
<% elsif chat.user2==current_user%>
<% atleast_one  = true%>
<li class="list-group-item chat-item">

    <div class="chat-header-cover"></div>
    <div class="chat-header-content">
        <%if chat.user2.avatar_url%>
            <span class="userimage"><img src="<%=chat.user2.avatar_url%>" alt="" width="50" height="50" class="rounded-circle"></span>
        <%else%>
            <span class="userimage"><%= image_tag "prof_pic_default.png" , class: "rounded-circle"%></span>
        <%end%>
        <span class="username"><%= link_to "Chat con "+chat.user1.name, chat %></span>
        <span class=" chat-button"><%= button_to 'X', chat_path(chat),class: 'btn btn-outline-dark', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, method: :delete %></span>
    </div>

</li>
<% end %>