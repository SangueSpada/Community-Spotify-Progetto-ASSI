<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Offcanvas navbar template Â· Bootstrap v5.1</title>
    <!-- Bootstrap core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
  </head>
  <% if !@user_participation.present? || (@user_participation.present? && !@user_participation.banned)%>
    <body>
      <%= render "partials/navbar" %>
      <div style="padding: 40pt"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div id="content" class="content content-full-width">
              <!-- begin profile -->
              <div class="profile">
                <div class="profile-header">
                  <!-- BEGIN profile-header-cover -->
                  <div class="profile-header-cover"></div>
                  <!-- END profile-header-cover -->
                  <!-- BEGIN profile-header-content -->
                  <div class="profile-header-content row">
                    <!-- BEGIN profile-header-img -->
                    <div class="profile-header-content col-10" style= "padding-bottom: 70px">
                      <div class="profile-header-img">
                        <img src="<%=@playlist.images[0]['url']%>" alt="">
                      </div>
                      <!-- END profile-header-img -->
                      <!-- BEGIN profile-header-info -->
                      <div class="profile-header-info" >
                        <h4 class="m-t-10 m-b-5"><%= @community.name %></h4>
                        <p class="m-b-10"><%= @community.description %></p>
                      </div>
                      <!-- END profile-header-info -->
                    </div>
                    <div class="profile-header-content col-2">
                      <div class="row mt-5">
                        <% if @user_participation.present? && @user_participation.role == "admin" %>
                          <%= link_to "Modifica Community", edit_community_path(community_id: @community.id), class:"btn btn-outline-warning", method: :get %>
                          <%= link_to "Elimina Community", community_path(community_id: @community.id), class:"btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, method: :delete %>
                        <% elsif current_user.participations.where(community_id: @community.id).first == nil %>
                          <%= button_to "Entra in community", create_user_community_participation_path(user_id: current_user.id, community_id: @community.id), class:"btn btn-outline-success"%>
                        <% elsif current_user.participations.where(community_id: @community.id, role: :member).first %>
                          <%= button_to "Abbandona community", user_community_participation_path(user_id: current_user.id, community_id: @community.id),class:"btn btn-outline-danger",  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, method: :delete %>
                        <% end %>
                      </div>
                    </div>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                      <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Posts</button>
                      <button class="nav-link" id="nav-playlist-tab" data-bs-toggle="tab" data-bs-target="#nav-playlist" type="button" role="tab" aria-controls="nav-playlist" aria-selected="false">Playlist</button>
                      <button class="nav-link" id="nav-iscritti-tab" data-bs-toggle="tab" data-bs-target="#nav-iscritti" type="button" role="tab" aria-controls="nav-iscritti" aria-selected="false">Iscritti</button>
                    </div>
                  </div>
                  
                  <!-- END profile-header-content -->
                </div>
              </div>
              <!-- end profile -->
              <!-- begin profile-content -->
              
              <div class="tab-content container text-center" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
                  <div class="profile-content row text-start">
                    <% if @user_participation.present? %>
                      <%= link_to "Crea un nuovo post", new_community_post_path(@community.id),class:"btn btn-outline-success", method: :get %>
                    <% end %>
                    <!-- begin tab-content -->
                    <div class="tab-content p-0">
                      <!-- begin #profile-post tab -->
                      <div class="tab-pane fade active show" id="profile-post">
                        <!-- begin timeline -->
                        <ul class="timeline">
                          <% @posts.each do |post| %>
                              <%= render "posts/post", post: post, communities: nil%>
                            <% end %>
                        </ul>
                      </div>
                      <!-- end #profile-post tab -->
                    </div>
                    <!-- end tab-content -->
                  </div>
              <!-- end profile-content -->
                </div>
                <div class="tab-pane fade show" id="nav-playlist" role="tabpanel" aria-labelledby="nav-playlist-tab" tabindex="0">
                  <iframe class="pt-2" style="border-radius:20px; margin: 0 auto; display:block; " src="https://open.spotify.com/embed/playlist/<%=@playlist.id%>?utm_source=generator" width="75%" height="250" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
                </div>
                <div class="tab-pane fade show" id="nav-iscritti" role="tabpanel" aria-labelledby="nav-iscritti-tab" tabindex="0">
                  <% if @user_participation.present? && (@user_participation.role=="admin" || @user_participation.role=="moderator") %>
                    <% @community.participations.each do |participation| %>
                      <% if participation.banned%>
                        <a href="/user/<%= String(participation.user.uid) %>" ><%= participation.user.name %></a> <strong class="text-dark"><%= button_to "Riammetti", unban_user_community_participation_path(user_id: participation.user_id, community_id: @community.id) %></strong><br>
                      <% elsif !participation.banned && participation.role=="admin" %>
                        <a href="/user/<%= String(participation.user.uid) %>" ><%= participation.user.uid %></a>  <strong class="text-dark">(<%= participation.role %>)</strong><br>
                      <% elsif !participation.banned && participation.role=="moderator" %>
                        <a href="/user/<%= String(participation.user.uid) %>" ><%= participation.user.name %></a> 
                        <strong class="text-dark">(<%= participation.role %>)</strong><br>
                        <strong>
                          <%= button_to "Bandisci utente", ban_user_community_participation_path(user_id: participation.user_id, community_id: @community.id), class:"text-dark"%> 
                          <%= button_to "Rendi proprietario", move_user_community_participation_path(user_id: participation.user_id, community_id: @community.id), class:"text-dark" %>
                        </strong><br> 
                      <% elsif !participation.banned && participation.role=="member"  %>
                        <a href="/user/<%= String(participation.user.uid) %>" ><%= participation.user.name %></a> <strong><%= button_to "Bandisci utente", ban_user_community_participation_path(user_id: participation.user_id, community_id: @community.id), class:"text-dark"%> <%= button_to "Promuovi a moderatore", promote_user_community_participation_path(user_id: participation.user_id, community_id: @community.id), class:"text-dark" %></strong><br>
                      <% end %>
                    <% end %>
                  <% else%>
                    <% @community.participations.each do |participation| %>
                      <% if !participation.banned && (participation.role == "admin" || participation.role == "moderator")  %>
                        <a href="/user/<%= String(participation.user.uid) %>" ><%= participation.user.uid %></a>  <strong class="text-dark">(<%= participation.role %>)</strong><br>
                      <% elsif !participation.banned %>
                        <a href="/user/<%= String(participation.user.uid) %>" ><%= participation.user.uid %></a>
                      <% end %>
                    <% end %>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
      window.onSpotifyIframeApiReady = (IFrameAPI) => {
        let element = document.getElementById('embed-iframe');
        let options = {
            width: '100%',
            heigth:'200'
            uri: 'spotify:playlist:<%=@playlist.id%>'
          };
        let callback = (EmbedController) => {};
        IFrameAPI.createController(element, options, callback);
      };
      </script>
    </body>
  <% elsif %>
    <p>SEI BANNATO, <%= link_to "TORNA ALLA HOME", root_path %> </p>
  <% end %>
</html>

