<%= form_with model: [community]  do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div>
        <%= form.label :playlist %>
        <%= form.text_area :playlist %>
    </div>

    <div>
        <%= form.collection_check_boxes(:tag_ids, Tag.all, :id, :name, include_hidden: false) do |b| %>
            <%= b.check_box %>
            <%= b.label %>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>